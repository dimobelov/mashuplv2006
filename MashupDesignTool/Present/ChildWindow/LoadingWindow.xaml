<controls:ChildWindow xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="MashupDesignTool.LoadingWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:MashupDesignTool.Controls"
           Width="260" Height="140" 
           Title="Loading" Closed="ChildWindow_Closed">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <toolkit:BusyIndicator HorizontalAlignment="Center" Name="busyIndicator" VerticalAlignment="Center" DisplayAfter="00:00:00" IsBusy="True" BusyContent="Loading..." Background="Transparent" BorderBrush="Transparent">
            <Grid Background="Transparent"></Grid>
        </toolkit:BusyIndicator>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Center" Margin="0,12,0,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>