<UserControl xmlns:my="clr-namespace:NewsReaderControl"  x:Class="NewsReaderControl.NewsReader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:dc="clr-namespace:DockCanvas;assembly=DockCanvas"
    mc:Ignorable="d"
    d:DesignHeight="204" d:DesignWidth="400" SizeChanged="UserControl_SizeChanged">
    
    <Border BorderThickness="2">
        <dc:DockCanvas x:Name="LayoutRoot" Background="White">
            <ListBox x:Name="listPages" Width="100" Background="Black" Height="192" Canvas.Left="0" Canvas.Top="0" MouseLeftButtonDown="listPages_MouseLeftButtonDown" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <my:NewsPage x:Name="nonePage" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Canvas.Left="100" Canvas.Top="0" />
        </dc:DockCanvas>
    </Border>
</UserControl>
