<bl:BasicControl x:Class="BlacklightTextBlock.StrokeTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:blacklight="clr-namespace:Blacklight.Controls;assembly=Blacklight.Controls"
    xmlns:bl="clr-namespace:BasicLibrary;assembly=BasicLibrary"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <blacklight:StrokeTextBlock VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="textBlock1" Background="Transparent" StrokeThickness="5" FontSize="60" Stroke="Yellow"></blacklight:StrokeTextBlock>
    </Grid>
</bl:BasicControl>
