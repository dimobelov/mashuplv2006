<UserControl x:Class="MashupDesignTool.EventBindingGridItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="70" d:DesignWidth="273" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" GotFocus="UserControl_GotFocus" LostFocus="UserControl_LostFocus" MouseLeftButtonUp="Label_MouseLeftButtonDown">

    <Border BorderBrush="#FFE9ECFA" BorderThickness="1">
        <Grid x:Name="LayoutRoot" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"></ColumnDefinition>
                <!--<ColumnDefinition Width="1"></ColumnDefinition>-->
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
        
            <Grid.RowDefinitions>
                <RowDefinition Height="18"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="22"></RowDefinition>
            </Grid.RowDefinitions>


            <sdk:Label Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#FFE9ECFA" x:Name="lblEventNameRegion">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/MashupDesignTool;component/Images/EventIcon.png" Margin="0,2,4,0"></Image>
                    <sdk:Label Name="lblEventName" Foreground="#FF808080" FontWeight="Bold"></sdk:Label>
                </StackPanel>
            </sdk:Label>
            <Border BorderBrush="#FFE9ECFA" BorderThickness="0,1,1,0" Grid.Row="1" MouseLeftButtonUp="Label_MouseLeftButtonDown" >
                <sdk:Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,0,2,0" Content="Control" MouseLeftButtonUp="Label_MouseLeftButtonDown" />
            </Border>
            <!--<sdk:GridSplitter Grid.RowSpan="2" Grid.Column="1" Name="gridSplitter1" Background="#FFE9ECFA" Width="1" />-->
            <Border BorderBrush="#FFE9ECFA" BorderThickness="0,1,0,0" Grid.Row="1" Grid.Column="1" >
                <ComboBox Grid.Column="1" Grid.Row="1" Name="cbbControl" Margin="1" SelectionChanged="cbbControl_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Background="Transparent" Margin="2,0,2,0">
                                <Image Source="{Binding ControlImage}" Width="25" Height="25" HorizontalAlignment="Center" Stretch="Uniform"></Image>
                                <TextBlock Text="{Binding ControlName}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Verdana" FontSize="11" Margin="2,0,0,0"></TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Border>
            <Border BorderBrush="#FFE9ECFA" BorderThickness="0,1,1,0" Grid.Row="2" MouseLeftButtonUp="Label_MouseLeftButtonDown" >
                <sdk:Label HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,0,2,0" Content="Operation" MouseLeftButtonUp="Label_MouseLeftButtonDown" />
            </Border>
            <Border BorderBrush="#FFE9ECFA" BorderThickness="0,1,0,0" Grid.Row="2" Grid.Column="1" >
                <ComboBox Grid.Column="2" Grid.Row="2" Name="cbbOperation" IsEnabled="False" Margin="1" SelectionChanged="cbbOperation_SelectionChanged" />
            </Border>
        </Grid>
    </Border>
</UserControl>
