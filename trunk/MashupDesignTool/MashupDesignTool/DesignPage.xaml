<UserControl x:Class="MashupDesignTool.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" Loaded="UserControl_Loaded" xmlns:my="clr-namespace:MashupDesignTool">
    
    <controlsToolkit:DockPanel LastChildFill="True">
        <Grid Height="100" controlsToolkit:DockPanel.Dock="Top"></Grid>
        <controlsToolkit:DockPanel LastChildFill="True">
            <controls:TreeView x:Name="TreeControl" controlsToolkit:DockPanel.Dock="Left" Background="AliceBlue">
            </controls:TreeView>
            <controlsToolkit:DockPanel LastChildFill="True">
                <Grid Width="200" controlsToolkit:DockPanel.Dock="Right"></Grid>
                <my:DesignCanvas HorizontalAlignment="Stretch" x:Name="designCanvas1" VerticalAlignment="Stretch" controlsToolkit:DockPanel.Dock="Left">
                </my:DesignCanvas>
            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </controlsToolkit:DockPanel>
</UserControl>
