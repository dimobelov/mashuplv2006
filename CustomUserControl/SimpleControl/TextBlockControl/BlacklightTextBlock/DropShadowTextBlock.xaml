<bl:BasicControl x:Class="BlacklightTextBlock.DropShadowTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bl="clr-namespace:BasicLibrary;assembly=BasicLibrary"
    xmlns:blacklight="clr-namespace:Blacklight.Controls;assembly=Blacklight.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <blacklight:DropShadowTextBlock VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="textBlock1" Background="Transparent"
                                        DropShadowOpacity="0.5"
                                        DropShadowAngle="45"
                                        DropShadowDistance="4"
                                        DropShadowColor="#FF000000"
                                        Text="DropShadowTextBlock"
                                          TextWrapping="Wrap"
                                          FontFamily="Verdana"
                                          FontSize="36"></blacklight:DropShadowTextBlock>
    </Grid>
</bl:BasicControl>
